<%- include("partials/header.ejs") %>


<!-- Main Content -->
<main class="container-fluid container-md mb-4">   
    <div>     
        <p style="font-size: xx-small; text-align: end;">API Calls Remaining: <strong><%= apiCallsLeft %></strong></p>
    </div>
    <div>
        <div class="">
            <ul class="d-flex list-unstyled">
                <% for (let index = 0; index < icons.length; index++) { %>
                    <li><img src="/assets/<%=icons[index]%>.png" alt="" width="60" height="60"></li>
                <% } %>
            </ul>
        </div>
        <div class="row">
            <div class="col-12 col-xl-5">
                <% if (geoCodeData.placeFound) { %>
                    <h4 class="mt-3"><%= geoCodeData.placeFound %>, <%= geoCodeData.state %>, <%= geoCodeData.country %></h4>     
                <% } else { %>
                    <h4 class="mt-3">Quepem, Goa, India</h4>                      
                <% } %>
                <p><%= new Date(weatherDescription.dt * 1000).toLocaleString("en-US", { weekday: 'short', year: 'numeric', month: 'short', day: '2-digit', hour: 'numeric', minute: '2-digit', hour12: true }) %></p>
                <h1 class="mb-3 display-1 display-md-3"><%= weatherDescription.temp.toFixed(2) %><span class="display-4 display-md-6 text-body-secondary">°C</span></h1>
                <p class="mb-0">Feels Like: 
                    <strong><%= weatherDescription.feels_like.toFixed(2) %> °C</strong>,
                    UVI: 
                    <strong><%= weatherDescription.uvi %></strong>
                </p>
                <p class="mb-3">
                    <%= weatherDescription.weather[0].description %>
                    <img src="https://openweathermap.org/img/wn/<%=weatherDescription.weather[0].icon%>.png" alt="weather-icon">
                </p>
            </div>
            <div class="col-12 col-xl-7">
                <h3 class="mt-3">Weather Summary</h5>
                <p>
                    <%= weatherOverview  %>
                </p>
            </div>
            
        </div>
        <div class="row">             
            <div class="col-12 col-xl-5">
                <h3 class="mt-3">8-day forecast</h3>
                <ul class="list-unstyled">
                    <% for (let index = 0; index < dailyForecast.length; index++) { %>
                    <% const element = dailyForecast[index]; %>
                    <li class="d-flex gap-4 align-items-center flex-nowrap">
                        <span style="width: 100px;"><%= element.dt %></span>
                        <div class="d-flex gap-1 align-items-center flex-nowrap">
                            <img src="https://openweathermap.org/img/wn/<%=element.weather[0].icon%>.png" alt="weather-icon"> 
                            <span style="width: 100px;"><%= element.temp.min.toFixed(0) %> / <%= element.temp.max.toFixed(0) %> °C</span>
                        </div>
                        <span style="font-weight: lighter;"><%= element.weather[0].description %></span>
                    </li>
                    <% } %>
                </ul>
            </div>
                <div class="col-12 col-xl-7">
                    <h3 class="mt-3">Hourly forecast</h3>
                    <canvas class="weather-chart"></canvas>
            </div>         
        </div>
    </div>
</main> 


<%- include("partials/footer.ejs") %>